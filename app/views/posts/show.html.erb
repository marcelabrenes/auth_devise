<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user_id %>
</p>

<p>
  <strong>Image:</strong>
  <%= @post.image %>
</p>

 <% if @post.comments.present?  %>
<ul>
  <% @post.comments.each do |comment| %>
  <li>
    <p><%= comment.content %></p>
    <p><%= comment.user.name %></p>
    <p><%= comment.updated_at %></p>
    <p><%= link_to 'Edit', edit_post_comment_path(@post, comment) %><p>
  </li>
  <% end %>
</ul>
<% end %>

 
<%= link_to 'Back', posts_path %>
